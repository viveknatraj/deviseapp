<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>
<div>
  <%= form_tag("/users", method: :get) do -%>
    <div class="field">
      <input type=text name='search' value="<%= params[:search] %>"/>
    </div>
    <div class="actions">
      <input type=submit value='Search'/>
    </div>
  <% end %>
</div>
<table>
  <thead>
    <tr>
      <th>Emp code</th>
      <th>Name</th>
      <th>Email</th>
      <th>Mobile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.emp_code %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.mobile %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

